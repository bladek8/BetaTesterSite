<script type="text/javascript">
    function ChangeMode(id) {
        type = id;
        mode = 1;
        if (id == 2) {
            $('.removeDiv').show();
            $('#GroundBlocks').hide();
            $('#TrapBlocks').show();
            $('.sortable').sortable('disable');
            $('.drag-sortable').sortable('disable');
            $('.sortable li, .drag-sortable li').css('cursor', 'pointer');
        }
        else {
            $('.removeDiv').hide();
            $('#GroundBlocks').show();
            $('#TrapBlocks').hide();

            SetSortable();
            $(".sortable").sortable("option", "disabled", false);
            $(".drag-sortable").sortable("option", "disabled", false);
            $('.sortable li, .drag-sortable li').css('cursor', 'grab');
            $('#listGroup .form-control').css('border-color', '#ced4da');
        }
        itemSelecteds = [];
        $('#ItemSelect')[0].checked = false;
        $('#listGroup .form-control').css('border-color', '');
        $('.sortable li').css('opacity', '.1');
        $('#TrapDiv ul').remove();
        $('#noTrapMessage').show();
    }

    function SetTraps(currentData, nextData, prevData, leftData, rightData, cTrap, nTrap, pTrap, lTrap, rTrap) {

        var traps = [];
        if (currentData != 2) {
            if (nextData == 0 && currentData != 0 && cTrap == 0 && nTrap == 0 ) {
                $.extend(traps, trapInGround);
            }
            if (currentData == 0 && prevData == 1 && cTrap == 0 && nTrap == 0 && pTrap == 0) {
                $.extend(traps, trapAboveGround);
            }
        }
        $('#TrapDiv ul').remove();
        if (traps.length > 0) {
            $.each(traps, function (i, e) {
                var list = $('<ul>', { class: 'drag-sortable' });
                var listItem = $('<li>', { class: 'form-control', style: 'text-align:center', onclick: '_SetTrap(' + e + ', ' + currentData + ')' }).data('value', e);
                $('#TrapDiv').append(list.append(listItem.append(GetIcon(e))));
            });
            $('#noTrapMessage').hide();
        } else {
            $('#noTrapMessage').show();
        }
        $('.sortable li, .drag-sortable li').css('cursor', 'pointer');
    }

    function _SetTrap(data, currentData) {
        $.each(itemSelecteds, function (i, e) {
            var idData = e.split('sortItem')[1];
            var listIndex = idData.split('-')[0];
            $($('#back-' + listIndex).children()[$('#' + e).index()]).find('img[class="trapImg"]').remove();
            $($('#back-' + listIndex).children()[$('#' + e).index()]).append(GetIcon(data, 'trapImg', (currentData == 0? 'margin: -7px 7px;' : '')));
            $($('#back-' + listIndex).children()[$('#' + e).index()]).data('trap', data);
        });
        itemSelecteds = [];
        $('#listGroup .form-control').css('border-color', '');
        $('.sortable li').css('opacity', '.1');
    }

    $('.remove-icon').click(function () {
        if (type == 1) {
            $.each(itemSelecteds, function (i, e) {
                var idData = e.split('sortItem')[1];
                var listIndex = idData.split('-')[0];
                $($('#back-' + listIndex).children()[$('#' + e).index()]).replaceWith('<li class="form-control" id="backItem' + listIndex + '-' + $('#' + e).index() + '"  data-value="0">&nbsp;</li>');
            });
        } else if (type == 2) {
            $.each(itemSelecteds, function (i, e) {
                var idData = e.split('sortItem')[1];
                var listIndex = idData.split('-')[0];
                $($('#back-' + listIndex).children()[$('#' + e).index()]).find('img[class="trapImg"]').remove();
                $($('#back-' + listIndex).children()[$('#' + e).index()]).removeData('trap');
            });
        }

        itemSelecteds = [];
        $('#listGroup .form-control').css('border-color', '');
        $('.sortable li').css('opacity', '.1');
    });

</script>