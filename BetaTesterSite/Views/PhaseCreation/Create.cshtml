@{
    ViewData["Title"] = "Criação de Fase";
    int qtdBlocosIniciais = 30;
}

<style>
    .sortable, .drag-sortable, .back {
        list-style-type: none;
        padding: 0;
        float: left;
    }

        .sortable li, .drag-sortable li, .back li {
            cursor: grab;
            width: 40px;
            height: 40px;
        }

        .sortable li {
            opacity: .1;
        }

            .sortable li img:not(.trapImg), .drag-sortable li img:not(.trapImg), .back li img:not(.trapImg) {
                width: 40px;
                height: 40px;
                margin: -20px -13px;
            }

    .form-control {
        border-radius: 0;
    }

    .trapImg {
        position: absolute;
        height: 15px;
        width: 15px;
        margin: -7px -2px;
        background-color: rgba(255,255,255,.4);
        border-radius: 2px;
    }

    #parent {
        width: 100%;
        height: 440px;
        position: relative;
        margin-bottom: 1em;
        overflow-x: auto;
        overflow-y: hidden;
    }

        #parent div {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }

    .highlight {
        border: 1px solid red;
        font-weight: bold;
        font-size: 45px;
        background-color: #333333;
    }

    .remove-icon:hover {
        color: red;
        cursor: pointer;
    }
</style>
<div id="AlertSuccess" class="alert alert-success fade show text-center" style="display: none;">
    <b>A fase foi salva com sucesso!</b>
</div>
<div id="AlertError" class="alert alert-danger fade show text-center" role="alert" style="display: none;">
    <strong>Atenção!</strong> Arrume os erros!
</div>
<div class="card bg-light">
    <div class="card-header">
        <h4>Criação de Fase</h4>
    </div>
    <div class="card-body">
        <div class="form-row" style="margin-bottom: 1em;">
            <div class="col-md-12">
                <div class="checkbox">
                    <label><input type="checkbox" id="ItemSelect">&nbsp;Selecionar Item&nbsp;<i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title="Quando habilitado os espaços abaixo podem ser selecionados e então escolhido um tipo de bloco para preenche-los"></i></label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="checkbox">
                    <label><input type="checkbox" id="TrapCheckBox">&nbsp;Armadilhas&nbsp;<i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" title=""></i></label>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $('#ItemSelect').change(function () {
                SetSortable();
                if ($('#ItemSelect')[0].checked) {
                    $('.removeDiv').show();
                    $(".sortable").sortable("option", "disabled", true);
                    $(".drag-sortable").sortable("option", "disabled", true);
                    $('.sortable li, .drag-sortable li').css('cursor', 'pointer');
                    mode = 2;
                    type = 1;
                    itemSelecteds = [];
                    $('#TrapCheckBox')[0].checked = false;
                    $('#listGroup .form-control').css('border-color', '');
                    $('.sortable li').css('opacity', '.1');
                    $('#GroundBlocks').show();
                    $('#TrapBlocks').hide();
                }
                else {
                    $('.removeDiv').hide();
                    mode = 1;
                    SetSortable();
                    $(".sortable").sortable("option", "disabled", false);
                    $(".drag-sortable").sortable("option", "disabled", false);
                    $('.sortable li, .drag-sortable li').css('cursor', 'grab');
                    $('#listGroup .form-control').css('border-color', '#ced4da');
                    itemSelecteds = [];
                }
            });
        </script>
        <div class="form-row" style="margin-bottom: 1em;">
            <div class="col-md-12">
                <div id="slider"></div>
            </div>
        </div>
        <div id="parent">
            <div style="user-select:none;" unselectable="on" onselectstart="return false;" onmousedown="return false;">
                <div class="form-group listGroup" id="backListGroup">
                    @for (int j = 1; j <= qtdBlocosIniciais; j++)
                    {
                        <ul id="back-@j" class="back">
                            @for (int i = 0; i < 10; i++)
                            {
                                <li class="form-control" id="backItem@(j)-@(i)" data-value="0">&nbsp;</li>
                            }
                        </ul>
                    }
                </div>
            </div>
            <div class="" id="row1" style="z-index:10; user-select:none;" unselectable="on" onselectstart="return false;" onmousedown="return false;">
                <div class="form-group listGroup" id="listGroup">
                    @for (int j = 1; j <= qtdBlocosIniciais; j++)
                    {
                        <ul id="sortable-@j" class="sortable">
                            @for (int i = 0; i < 10; i++)
                            {
                                <li class="form-control" id="sortItem@(j)-@(i)" data-value="0">&nbsp;</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
        <hr />
        <div class="row" id="GroundBlocks">
            <div class="col-md-10" style="margin-bottom:4em; user-select:none;" unselectable="on" onselectstart="return false;" onmousedown="return false;">
                <ul id="stuckSortable-0" class="drag-sortable pop" data-popover="true" data-html="true" data-content="bloco padrão<br/><a href=javascript:void(0)' data-toggle='modal' data-target='#VideoExemploModal'>video</a>">
                    <li class="form-control" style="text-align:center" data-value="1">
                        <img style="position:relative;" src="~/images/ground_tile1.png" />
                    </li>
                </ul>
                <ul id="stuckSortable-1" class="drag-sortable">
                    <li class="form-control" style="text-align:center" data-value="2"><img src="~/images/Personagem.png" /></li>
                </ul>
                <ul id="stuckSortable-2" class="drag-sortable">
                    <li class="form-control" style="text-align:center" data-value="3"><img src="~/images/ground-ramp-right_tile1.png" /></li>
                </ul>
                <ul id="stuckSortable-3" class="drag-sortable">
                    <li class="form-control" style="text-align:center" data-value="4"><img src="~/images/ground-ramp-left_tile1.png" /></li>
                </ul>
                <ul id="stuckSortable-4" class="drag-sortable">
                    <li class="form-control" style="text-align:center" data-value="5"><img src="~/images/flag.png" /></li>
                </ul>
            </div>
            <div class="col-md-2 removeDiv" style="margin-bottom:4em; user-select:none; display:none;" unselectable="on" onselectstart="return false;" onmousedown="return false;">
                <ul style="float: right;">
                    <li class="form-control remove-icon" style="border:0; background-color: rgba(255, 255, 255, 0); text-align:center; font-size:1.5em;"><i class="fas fa-trash-alt"></i></li>
                </ul>
            </div>
        </div>
        <div class="row" id="TrapBlocks" style="display:none;">
            <div class="col-md-10" style="margin-bottom:4em; user-select:none;" unselectable="on" onselectstart="return false;" onmousedown="return false;" id="TrapDiv">
                <i id="noTrapMessage">Nenhuma armadilha possível, selecione outro bloco.</i>
            </div>
            <div class="col-md-2 removeDiv" style="margin-bottom:4em; user-select:none; display:none;" unselectable="on" onselectstart="return false;" onmousedown="return false;">
                <ul style="float: right;">
                    <li class="form-control remove-icon" style="border:0; background-color: rgba(255, 255, 255, 0); text-align:center; font-size:1.5em;"><i class="fas fa-trash-alt"></i></li>
                </ul>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <label>Nome*</label>
                <input type="text" class="form-control" id="PhaseName" placeholder="Nome" />
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group float-right">
            <button class="btn btn-success" data-toggle="modal" data-target="#OpenArchiveModal"><i class="fas fa-download"></i>&nbsp;Carregar Fase</button>
            <button class="btn btn-success float-right" id="SaveButton"><i class="fas fa-upload"></i>&nbsp;Salvar</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    var mode = 1;
    var type = 1;
    var trapInGround = [6];
    var trapAboveGround = [7];
    var directionalTrapsHor = [7];
    var directionalTrapsVer = [];

    SetTooltip();
    function SetTooltip() {
        $('.pop').popover({
            selector: '[data-popover]',
            placement: 'top',
            trigger: 'manual',
            html: true,
            animation: false
        }).on('mouseenter', function () {
            var _this = this;
            $(this).popover('show');
            $('.popover').on('mouseleave', function () {
                $(_this).popover('hide');
            });
        }).on('mouseleave', function () {
            var _this = this;
            setTimeout(function () {
                if (!$('.popover:hover').length) {
                    $(_this).popover('hide');
                }
            }, 100);
        });
    }

    function HasCharacter() {
        var charQtd = 0;
        var allLists = $('ul.sortable');
        for (var i = 0; i < allLists.length; i++) {
            var childs = $(allLists[i].children);
            for (var j = 0; j < childs.length; j++) {
                if ($(childs[j]).data('value') == '2')
                    charQtd++;
            }
        }
        return charQtd > 1 ? true : false;
    }

        $("#slider").slider({
            min: 1,
            value: @qtdBlocosIniciais,
            animate: "fast",
            slide: function (event, ui) {
                var sliderValue = $("#slider").slider("value");
                SetLists(sliderValue);
             }
    });

    function SetSortable() {
        var startList;
        var startIndex;
        $(".sortable").sortable({
            placeholder: "highlight",
            connectWith: ".sortable",
            placeholder: "highlight",
            start: function (event, ui) {
                startList = event.currentTarget;
                startIndex = ui.item.index();
                var l = $(startList).attr('id').split('-').pop();
                $(ui.item).empty();
                $(ui.item).css('opacity', '1');

                $(ui.item).data('value', $('#backItem' + l + '-' + startIndex).data('value'));
                $(ui.item).data('trap', $('#backItem' + l + '-' + startIndex).data('trap'));
                $(ui.item).append($('#backItem' + l + '-' + startIndex).find('img'));

                $('<li class="form-control" id="sortItem' + l + '-' + startIndex + '" data-value="0">&nbsp;</li>').insertAfter($(startList).find('li')[startIndex]);
            },
            stop: function (event, ui) {
                console.log($('#backItem' + $(startList).attr('id').split('-').pop() + '-' + startIndex));
                $('#backItem' + $(startList).attr('id').split('-').pop() + '-' + startIndex).removeData('value');
                $('#backItem' + $(startList).attr('id').split('-').pop() + '-' + startIndex).removeData('trap');
                $('.drag-sortable li').css('background', '').css('border-color', '#ced4da').css('display', 'block');
                $('.sortable li').css('background', '').css('border-color', '#ced4da').css('display', 'block');
                $(ui.item).css('opacity', '.1');

                var listId = ui.item.closest('ul').attr('id');
                var backItems = $('#back-' + listId.split("-").pop()).closest("ul")[0].children;
                var _startIndex = ui.item.index();

                if (_startIndex == 10)
                    ui.item.remove();
                else {
                    var items = $('#' + listId).sortable("widget")[0].children;
                    $(backItems[_startIndex]).data('value', $(ui.item).data('value'));
                    $(backItems[_startIndex]).data('trap', $(ui.item).data('trap'));
                    $(backItems[_startIndex]).empty();
                    if ($(items[_startIndex]).find('img').length > 0) {
                        $(backItems[_startIndex]).append($(items[_startIndex]).find('img'));
                    }
                    items[_startIndex + 1].remove();
                }

                var i = $(startList).attr('id').split('-').pop();
                var _backItems = $('#back-' + i).closest("ul")[0].children;
                var nextItem = $(_backItems[startIndex + 1]);
                var item = $(backItems[_startIndex]);
                var prev = $(backItems[_startIndex - 1]);
                var next = $(backItems[_startIndex + 1]);

                if ($(nextItem).find('img').length >= 1) {
                    if ($(nextItem).find('img[src="/images/ground_tile2.png"]').length >= 1) {
                        $(nextItem).empty();
                        $(nextItem).append('<img src="/images/ground_tile1.png" />');
                    }
                }

                if ($(prev).find('img').length >= 1 && $(prev).data('value') != 2) {
                    if ($(item).find('img[src="/images/ground_tile1.png"]').length >= 1) {
                        $(item).empty();
                        $(item).append('<img src="/images/ground_tile2.png" />');
                    }
                }
                else {
                    if ($(item).find('img[src="/images/ground_tile2.png"]').length >= 1) {
                        $(item).empty();
                        $(item).append('<img src="/images/ground_tile1.png" />');
                    }
                }

                if ($(item).find('img').length == 0) {
                    if ($(next).find('img[src="/images/ground_tile2.png"]').length >= 1) {
                        $(next).empty();
                        $(next).append('<img src="/images/ground_tile1.png" />');
                    }
                }

                if ($(item).data('value') != 2 && $(item).find('img').length >= 1 && $(next).find('img').length >= 1) {
                    if ($(next).find('img[src="/images/ground_tile1.png"]').length >= 1) {
                        $(next).empty();
                        $(next).append('<img src="/images/ground_tile2.png" />');
                    }
                }

                SetIds();
                //RemoveExceededItem(listId.split("-").pop());
            }
        });
        $(".drag-sortable").sortable({
            placeholder: "highlight",
            connectWith: ".sortable",
            placeholder: "highlight",
            start: function (event, ui) {
                startList = event.currentTarget;
                var _listId = parseInt($(startList).attr('id').split("-").pop()) + 1;
                $(startList).append('<li class="form-control" style="text-align:center"  data-value="' + _listId + '">' + GetIcon(_listId) + '</li>');
            },
            stop: function (event, ui) {
                $('.drag-sortable li').css('background', '').css('border-color', '#ced4da').css('display', 'block');
                $('.sortable li').css('background', '').css('border-color', '#ced4da').css('display', 'block');
                var listId = ui.item.closest('ul').attr('id');
                if (ui.item.closest('ul').hasClass('drag-sortable')) {
                    ui.item.remove();
                    return;
                }

                var backItems = $('#back-' + listId.split("-").pop()).closest("ul")[0].children;
                var items = $('#' + listId).sortable("widget")[0].children;
                var _i = ui.item.index();

                if ($(startList).attr('id') == 'stuckSortable-1' && HasCharacter()) {
                    ui.item.remove();
                }
                else {
                    $(backItems[_i]).empty();
                    $(backItems[_i]).data('value', $(items[_i]).data('value'));
                    if ($(items[_i]).find('img').length > 0) {
                        $(backItems[_i]).append($(items[_i]).find('img')[0]);
                    }
                    if (_i == 10) items[_i].remove();
                    else items[_i + 1].remove();
                }

                var i = $(startList).attr('id').split('-').pop();
                var item = $(backItems[_i]);
                var prev = $(backItems[_i - 1]);
                var next = $(backItems[_i + 1]);

                if ($(prev).find('img').length >= 1 && $(prev).data('value') != 2) {
                    if ($(item).find('img[src="/images/ground_tile1.png"]').length >= 1) {
                        $(item).empty();
                        $(item).append('<img src="/images/ground_tile2.png" />');
                    }
                }

                if ($(item).data('value') != 2 && $(next).find('img').length >= 1) {
                    if ($(next).find('img[src="/images/ground_tile1.png"]').length >= 1) {
                        $(next).empty();
                        $(next).append('<img src="/images/ground_tile2.png" />');
                    }
                }

                SetIds();
                //RemoveExceededItem(listId.split("-").pop());
            }
        });

        $('.sortable, .drag-sortable').on('mousedown', '.form-control', function () {
            if (mode == 2 || type == 2)
                $(this).css('cursor', 'pointer');
            else {
                $(this).css('cursor', 'grabbing');
                $('.pop').popover('hide');
            }
        }).on('mouseup', '.form-control', function () {
            if (mode == 2 || type == 2)
                $(this).css('cursor', 'pointer');
            else
                $(this).css('cursor', 'grab');
        });
    }
    $(window).ready(function () {
        SetSortable();
        $('[data-toggle="tooltip"]').tooltip();
    });

    //function RemoveExceededItem(index) {
    //    if ($('#sortable-' + index)[0].children.length <= 10) return;

    //    $('#sortable-' + index)[0].children[$('#sortable-' + index)[0].children.length - 1].remove();
    //}

    function SetLists(size) {
        size = size < 20 ? 20 : size;
        if (size > $('#listGroup').find('ul').length) {
            if ($('#listGroup').find('ul').length < size) {
                for (var k = $('#listGroup').find('ul').length + 1; k <= size; k++) {
                    $('#listGroup').append('<ul id="sortable-' + k + '" class="sortable">' +
                    @for (int i = 0; i < 10; i++)
                    {
                        <text>
                        '<li class="form-control" id="sortItem' + k + '-@(i)"  data-value="0">&nbsp;</li>' +
                        </text>
                    }
                        '</ul>');
                    
                    $('#backListGroup').append('<ul id="back-' + k + '" class="back">' +
                    @for (int i = 0; i < 10; i++)
                    {
                        <text>
                        '<li class="form-control" id="backItem' + k + '-@(i)"  data-value="0">&nbsp;</li>' +
                        </text>
                    }
                        '</ul>');
                }
            }

            var totalWidth = size * 40;
            $('.listGroup').width(totalWidth);
            SetSortable();

            if (mode == 2) {
                $('.sortable').sortable('disable');
                $('.drag-sortable').sortable('disable');
                $('.sortable li, .drag-sortable li').css('cursor', 'pointer');
            }

        }
        else {
            $('.listGroup').width((20 * 40) );
            $('.listGroup').find('ul')[$('.listGroup').find('ul').length - 1].remove();
            SetLists(size);
        }
    }

    function SetIds() {
        for (var k = 0; k < $('#listGroup').find('ul').length; k++){
            $.each($($('#listGroup').find('ul')[k]).children(), function (i, e) {
                $(e).attr('id', 'sortItem'+ (k + 1) + '-' + i);
            });
        }
    }

    function GetIcon(id, _class, style) {
        var img = '<img ';
        if (_class != null) img += 'class="' + _class + '" ';
        if (style != null) img += 'style="' + style + '" ';

        switch (id) {
            case 1:
                return img + 'src="/images/ground_tile1.png" />';
            case 2:
                return img + 'src="/images/Personagem.png" />';
            case 3:
                return img + 'src="/images/ground-ramp-right_tile1.png" />';
            case 4:
                return img + 'src="/images/ground-ramp-left_tile1.png" />';
            case 5:
                return img + 'src="/images/flag.png" />';
            case 6:
                return img + 'src="/images/Serra.png" />';
            case 7:
                return img + 'src="/images/totem.png" />';
            default:
                return '&nbsp;';
        }
    }

    function Save() {
        var data = new Array();
        var _data = [];

        var hasCharacter = false;
        var hasFlag = false;

        var allLists = $('ul.back');
        for (var i = 0; i < allLists.length; i++) {
            var childs = $(allLists[i].children);
            _data = [];
            for (var j = 0; j < childs.length; j++) {
                if ($(childs[j]).data('value') == 2) hasCharacter = true;
                if ($(childs[j]).data('value') == 5) hasFlag = true;

                _data.push($(childs[j]).data('value') + ($(childs[j]).data('trap') != null ? '-' + $(childs[j]).data('trap') : ''));
            }
            data.push(_data.join(','));
        }

        if (!hasCharacter) {
            alert('É preciso ter o personagem!');
            $('#AlertSuccess').hide();
            $('#AlertError').show();
            $('html,body').animate({ scrollTop: 0 }, 'slow');
            return;
        }

        if (!hasFlag) {
            alert('É preciso ter ao menos bandeira!');
            $('#AlertSuccess').hide();
            $('#AlertError').show();
            $('html,body').animate({ scrollTop: 0 }, 'slow');
            return;
        }

        $.ajax({
            url: '@Url.Action("Save", "PhaseCreation")',
            type: 'POST',
            data: { Data: data, Name: $('#PhaseName').val() },
            traditional: true,
            dataType: 'json',
            success: function (data) {
                if (data) {
                    $('#AlertSuccess').show();
                    $('#AlertError').hide();
                    $('#phaseTable').DataTable().ajax.reload();
                }
                else {
                    $('#AlertSuccess').hide();
                    $('#AlertError').show();
                }
                $('html,body').animate({ scrollTop: 0 }, 'slow');
            }
        });
    }

    function Validate() {
        var hasError = false;
        $('.text-danger').remove();

        if (IsNullOrWhiteSpace($('#PhaseName').val())) {
            hasError = true;
            $('#PhaseName').after('<div class="text-danger">Preencha o nome!</div>');
        }
        if (hasError) {
            $('#AlertSuccess').hide();
            $('#AlertError').show();
            $('html,body').animate({ scrollTop: 0 }, 'slow');
        }
        return !hasError;
    }

    $('#SaveButton').click(function () {
        if (Validate()) {
            Save();
        }
    });
</script>

